
body
  background #fff
  font normal 11px 'Lucida Sans Unicode', sans-serif
  line-height 1.7
  margin 0
  text-align justify
  color #555
a
  color #457899
  text-decoration none
a:hover
  color #223c61
  cursor pointer
  border-bottom 1px solid #a5c2cc
a img
  border none
b, strong
  font-family 'Helvetica', sans-serif
#container
  margin 50px auto
  width 710px
.header
  border-bottom 1px dotted #eee
  margin 0 0 30px 210px
  width 500px
.icon
  margin 0 0 15px
.icon img
  -moz-border-radius 50px
  -webkit-border-radius 50px
  display block
  width 80px
  height 80px
.title
  font normal 22px 'Georgia', serif
  color #0c0c11
  letter-spacing 2px
  margin 0 0 15px 
  text-transform lowercase
.title a
  color #0c0c11
  text-decoration none
.title a:hover
  color #201f25
  border none
.quote
  color #999
  padding 0 0 15px
.ldquo
  font normal 100px 'Georgia', serif
  color #eee
  margin -15px 0 -85px
.navigator
  margin 15px 0 0
.tabs
  margin 0
  padding 0
  list-style none
.tabs li
  display inline
  margin 0 0 0 5px
.content
  margin 0 0 30px
  overflow auto
.info
  float left
  width 180px
.article
  float right
  width 500px
  .created_at
    font-size 9px
    color #222
    text-align right
    text-transform uppercase
    -moz-opacity 0.5
    -webkit-opacity 0.5
  .created_at:hover
    cursor:default
    -webkit-transition opacity .2s
    -moz-opacity 1
    -webkit-opacity 1
  .title
    font normal 13px 'Calibri', Trebuchet MS, sans-serif
    color #666
    letter-spacing 3px
    margin 0 0 15px
    padding 5px 0
    text-align center
    text-transform uppercase
  .title a
    background #f9f9f9
    border-bottom 1px solid #f3f3f3
    padding 5px 10px 4px
    color #666
  .title a:hover
    background #f7f7f7
    color #444
    border-bottom 1px solid #f0f0f0
.article img
  max-width 500px
.article
  input[type =text]
    width 490px
    margin-left 16px
  input[type =button], input[type =submit]
    text-align left
    margin-left 44px
  textarea
    width 490px
    height 90px
    
